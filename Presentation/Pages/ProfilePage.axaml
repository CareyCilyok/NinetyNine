<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NinetyNine.Presentation.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="NinetyNine.Presentation.Pages.ProfilePage">

   <UserControl.DataContext>
      <vm:ProfilePageViewModel/>
   </UserControl.DataContext>

   <ScrollViewer VerticalScrollBarVisibility="Auto">
      <Grid Margin="15">
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <!-- Profile Header -->
         <Border Grid.Row="0" 
                 Background="DarkSlateBlue" 
                 CornerRadius="10" 
                 Padding="25" 
                 Margin="0,0,0,15">
            <Grid>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
               </Grid.ColumnDefinitions>

               <!-- Avatar Section -->
               <Border Grid.Column="0" 
                       Background="White" 
                       CornerRadius="50" 
                       Width="100" 
                       Height="100" 
                       Margin="0,0,20,0">
                  <TextBlock Text="ðŸ‘¤" 
                             FontSize="48" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
               </Border>

               <!-- Player Info -->
               <StackPanel Grid.Column="1" VerticalAlignment="Center">
                  <TextBlock Text="{Binding PlayerName}" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                  <TextBlock Text="{Binding PlayerRank}" 
                             FontSize="16" 
                             Foreground="Gold" 
                             Margin="0,5,0,0"/>
                  <TextBlock Text="{Binding MemberSinceText}" 
                             FontSize="12" 
                             Foreground="LightGray" 
                             Margin="0,5,0,0"/>
                  
                  <!-- Level Progress Bar -->
                  <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                     <TextBlock Text="Level Progress: " 
                                FontSize="12" 
                                Foreground="White" 
                                VerticalAlignment="Center"/>
                     <Border Background="#333" 
                             CornerRadius="10" 
                             Width="150" 
                             Height="20" 
                             Margin="5,0,0,0">
                        <Border Background="Gold" 
                                CornerRadius="10" 
                                Width="75" 
                                HorizontalAlignment="Left"/>
                     </Border>
                     <TextBlock Text="{Binding LevelProgress, StringFormat={}{0:F0}%}" 
                                FontSize="12" 
                                Foreground="White" 
                                Margin="10,0,0,0" 
                                VerticalAlignment="Center"/>
                  </StackPanel>
               </StackPanel>

               <!-- Action Buttons -->
               <StackPanel Grid.Column="2" VerticalAlignment="Center">
                  <Button Command="{Binding EditProfileCommand}" 
                          Content="âœï¸ Edit Profile" 
                          Background="DarkOrange" 
                          Foreground="White" 
                          Padding="15,8" 
                          Margin="0,0,0,10"
                          IsVisible="{Binding !IsEditing}"/>
                  <Button Command="{Binding SaveProfileCommand}" 
                          Content="ðŸ’¾ Save" 
                          Background="Green" 
                          Foreground="White" 
                          Padding="15,8" 
                          Margin="0,0,0,5"
                          IsVisible="{Binding IsEditing}"/>
                  <Button Command="{Binding CancelEditCommand}" 
                          Content="âŒ Cancel" 
                          Background="Red" 
                          Foreground="White" 
                          Padding="15,8"
                          IsVisible="{Binding IsEditing}"/>
                  <Button Command="{Binding RefreshDataCommand}" 
                          Content="ðŸ”„ Refresh" 
                          Background="DarkBlue" 
                          Foreground="White" 
                          Padding="15,8"/>
               </StackPanel>
            </Grid>
         </Border>

         <!-- Statistics Overview -->
         <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Games -->
            <Border Grid.Column="0" 
                    Background="LightSeaGreen" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸŽ®" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding TotalGamesText}" 
                             FontWeight="Bold" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             TextWrapping="Wrap"/>
               </StackPanel>
            </Border>

            <!-- Average Score -->
            <Border Grid.Column="1" 
                    Background="MediumPurple" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸŽ¯" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding AverageScoreText}" 
                             FontWeight="Bold" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             TextWrapping="Wrap"/>
               </StackPanel>
            </Border>

            <!-- Highest Score -->
            <Border Grid.Column="2" 
                    Background="Crimson" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸ†" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding HighestScoreText}" 
                             FontWeight="Bold" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             TextWrapping="Wrap"/>
               </StackPanel>
            </Border>

            <!-- Playing Time -->
            <Border Grid.Column="3" 
                    Background="DarkOrange" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸ“…" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding PlayingTimeText}" 
                             FontWeight="Bold" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             TextWrapping="Wrap"/>
               </StackPanel>
            </Border>
         </Grid>

         <!-- Main Content Sections -->
         <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
               <RowDefinition Height="1*"/>
               <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Player Details / Edit Form -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ‘¤ Player Details" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>

                  <!-- View Mode -->
                  <StackPanel IsVisible="{Binding !IsEditing}">
                     <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="Auto"/>
                           <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Name:" FontWeight="Bold" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding PlayerName}"/>
                     </Grid>
                     <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="Auto"/>
                           <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Username:" FontWeight="Bold" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentPlayer.Username}"/>
                     </Grid>
                     <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="Auto"/>
                           <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Email:" FontWeight="Bold" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentPlayer.EmailAddress}"/>
                     </Grid>
                     <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="Auto"/>
                           <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Phone:" FontWeight="Bold" Width="80"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentPlayer.PhoneNumber}"/>
                     </Grid>
                  </StackPanel>

                  <!-- Edit Mode -->
                  <StackPanel IsVisible="{Binding IsEditing}">
                     <TextBlock Text="First Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                     <TextBox Text="{Binding CurrentPlayer.FirstName}" Margin="0,0,0,10"/>
                     
                     <TextBlock Text="Last Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                     <TextBox Text="{Binding CurrentPlayer.LastName}" Margin="0,0,0,10"/>
                     
                     <TextBlock Text="Username:" FontWeight="Bold" Margin="0,0,0,5"/>
                     <TextBox Text="{Binding CurrentPlayer.Username}" Margin="0,0,0,10"/>
                     
                     <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                     <TextBox Text="{Binding CurrentPlayer.EmailAddress}" Margin="0,0,0,10"/>
                     
                     <TextBlock Text="Phone:" FontWeight="Bold" Margin="0,0,0,5"/>
                     <TextBox Text="{Binding CurrentPlayer.PhoneNumber}"/>
                  </StackPanel>
               </StackPanel>
            </Border>

            <!-- Achievements -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ… Achievements" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                  
                  <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding Achievements}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="{Binding BackgroundColor}" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="0,0,0,8">
                                 <Grid>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="Auto"/>
                                       <ColumnDefinition Width="*"/>
                                       <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Icon}" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                       <TextBlock Text="{Binding Title}" 
                                                  FontWeight="Bold" 
                                                  FontSize="12"/>
                                       <TextBlock Text="{Binding Description}" 
                                                  FontSize="10" 
                                                  Foreground="Gray" 
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding UnlockedText}" 
                                               FontSize="10" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center"/>
                                 </Grid>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ“ Recent Activity" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                  
                  <ScrollViewer Height="180" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding RecentActivity}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="Azure" 
                                      CornerRadius="5" 
                                      Padding="8" 
                                      Margin="0,0,0,5">
                                 <Grid>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="Auto"/>
                                       <ColumnDefinition Width="*"/>
                                       <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Icon}" 
                                               FontSize="16" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Description}" 
                                               FontSize="11" 
                                               TextWrapping="Wrap" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding TimeAgo}" 
                                               FontSize="10" 
                                               Foreground="Gray" 
                                               VerticalAlignment="Center"/>
                                 </Grid>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>

            <!-- Favorite Venues -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ“ Favorite Venues" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                  
                  <ScrollViewer Height="180" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding FavoriteVenues}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="Lavender" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="0,0,0,8">
                                 <Grid>
                                    <Grid.RowDefinitions>
                                       <RowDefinition Height="Auto"/>
                                       <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="*"/>
                                       <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding AverageScoreText}" 
                                               FontSize="11" 
                                               Foreground="DarkBlue"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="{Binding GamesPlayedText}" 
                                               FontSize="10" 
                                               Foreground="Gray"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding LastPlayedText}" 
                                               FontSize="10" 
                                               Foreground="Gray"/>
                                 </Grid>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>
         </Grid>

         <!-- Loading Overlay -->
         <Border Grid.Row="0" Grid.RowSpan="3" 
                 Background="#80000000" 
                 CornerRadius="8" 
                 IsVisible="{Binding IsLoading}">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
               <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
               <TextBlock Text="Loading Profile..." 
                          FontSize="16" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0"/>
            </StackPanel>
         </Border>

      </Grid>
   </ScrollViewer>
</UserControl>