<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NinetyNine.Presentation.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="NinetyNine.Presentation.Pages.StatisticsPage">

   <UserControl.DataContext>
      <vm:StatisticsPageViewModel/>
   </UserControl.DataContext>

   <ScrollViewer VerticalScrollBarVisibility="Auto">
      <Grid Margin="15">
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <!-- Header Section -->
         <Border Grid.Row="0" 
                 Background="DarkBlue" 
                 CornerRadius="8" 
                 Padding="20" 
                 Margin="0,0,0,15">
            <StackPanel>
               <TextBlock Text="ðŸ“Š Game Statistics &amp; Analytics" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
               <TextBlock Text="Track your progress and improve your game" 
                          FontSize="14" 
                          Foreground="LightGray"
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
         </Border>

         <!-- Time Range Selection -->
         <Border Grid.Row="1" 
                 Background="LightGray" 
                 CornerRadius="5" 
                 Padding="15" 
                 Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
               <TextBlock Text="Time Range:" 
                          VerticalAlignment="Center" 
                          FontWeight="Bold" 
                          Margin="0,0,10,0"/>
               <ComboBox SelectedItem="{Binding SelectedTimeRange}" 
                         Width="120">
                  <ComboBoxItem Content="Last 7 Days"/>
                  <ComboBoxItem Content="Last 30 Days" IsSelected="True"/>
                  <ComboBoxItem Content="Last 90 Days"/>
                  <ComboBoxItem Content="All Time"/>
               </ComboBox>
               <Button Command="{Binding RefreshDataCommand}" 
                       Content="ðŸ”„ Refresh" 
                       Margin="15,0,0,0" 
                       Padding="10,5"/>
            </StackPanel>
         </Border>

         <!-- Statistics Overview Cards -->
         <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Total Games Card -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="LightBlue" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸŽ®" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding TotalGamesText}" 
                             FontWeight="Bold" 
                             FontSize="14" 
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding CompletionRateText}" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             Margin="0,2,0,0"/>
               </StackPanel>
            </Border>

            <!-- Average Score Card -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="LightGreen" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸŽ¯" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding AverageScoreText}" 
                             FontWeight="Bold" 
                             FontSize="14" 
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding HighestScoreText}" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             Margin="0,2,0,0"/>
               </StackPanel>
            </Border>

            <!-- Perfect Frames Card -->
            <Border Grid.Row="0" Grid.Column="2" 
                    Background="Gold" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="â­" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding PerfectFramesText}" 
                             FontWeight="Bold" 
                             FontSize="14" 
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding BreakSuccessRateText}" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             Margin="0,2,0,0"/>
               </StackPanel>
            </Border>

            <!-- Improvement Trend Card -->
            <Border Grid.Row="0" Grid.Column="3" 
                    Background="LightCoral" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel HorizontalAlignment="Center">
                  <TextBlock Text="ðŸ“ˆ" FontSize="24" HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding ImprovementTrendText}" 
                             FontWeight="Bold" 
                             FontSize="14" 
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding ConsistencyScoreText}" 
                             FontSize="12" 
                             HorizontalAlignment="Center" 
                             Margin="0,2,0,0"/>
               </StackPanel>
            </Border>
         </Grid>

         <!-- Main Content Areas -->
         <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1*"/>
               <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
               <RowDefinition Height="1*"/>
               <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Recent Games Section -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ•’ Recent Games" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,10"/>
                  
                  <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding RecentGames}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="AliceBlue" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="0,0,0,5">
                                 <Grid>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="*"/>
                                       <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                       <RowDefinition Height="Auto"/>
                                       <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="{Binding FormattedDate}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding ScoreText}" 
                                               FontWeight="Bold" 
                                               FontSize="12" 
                                               Foreground="DarkBlue"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="{Binding Venue}" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding TableSize}" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                 </Grid>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>

            <!-- Leaderboard Section -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ† Leaderboard" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,10"/>
                  
                  <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding LeaderboardEntries}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="LemonChiffon" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="0,0,0,5">
                                 <Grid>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="Auto"/>
                                       <ColumnDefinition Width="*"/>
                                       <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Rank, StringFormat='#{0}'}" 
                                               FontWeight="Bold" 
                                               FontSize="12" 
                                               Width="30"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding PlayerName}" 
                                               FontSize="12" 
                                               Margin="5,0"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding AverageScore, StringFormat={}{0:F1}}" 
                                               FontWeight="Bold" 
                                               FontSize="12" 
                                               Foreground="DarkGreen"/>
                                 </Grid>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>

            <!-- Improvement Suggestions Section -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ’¡ Improvement Tips" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,10"/>
                  
                  <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                     <ItemsControl ItemsSource="{Binding ImprovementSuggestions}">
                        <ItemsControl.ItemTemplate>
                           <DataTemplate>
                              <Border Background="MistyRose" 
                                      CornerRadius="5" 
                                      Padding="8" 
                                      Margin="0,0,0,5">
                                 <TextBlock Text="{Binding}" 
                                            TextWrapping="Wrap" 
                                            FontSize="11"/>
                              </Border>
                           </DataTemplate>
                        </ItemsControl.ItemTemplate>
                     </ItemsControl>
                  </ScrollViewer>
               </StackPanel>
            </Border>

            <!-- Progress Chart Placeholder -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
               <StackPanel>
                  <TextBlock Text="ðŸ“Š Progress Chart" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Margin="0,0,0,10"/>
                  
                  <!-- Simple progress visualization -->
                  <Border Background="LightGray" 
                          Height="150" 
                          CornerRadius="5" 
                          Padding="10">
                     <StackPanel VerticalAlignment="Center" 
                                 HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“ˆ" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Progress Tracking" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Visual chart coming soon!" 
                                   FontSize="12" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ProgressData.Count, StringFormat={}{0} data points}" 
                                   FontSize="11" 
                                   Foreground="DarkGray" 
                                   HorizontalAlignment="Center"/>
                     </StackPanel>
                  </Border>
               </StackPanel>
            </Border>
         </Grid>

         <!-- Loading Overlay -->
         <Border Grid.Row="0" Grid.RowSpan="4" 
                 Background="#80000000" 
                 CornerRadius="8" 
                 IsVisible="{Binding IsLoading}">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
               <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
               <TextBlock Text="Loading Statistics..." 
                          FontSize="16" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0"/>
            </StackPanel>
         </Border>

      </Grid>
   </ScrollViewer>
</UserControl>