<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NinetyNine.Presentation.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="NinetyNine.Presentation.Pages.VenuePage">

   <UserControl.DataContext>
      <vm:VenuePageViewModel/>
   </UserControl.DataContext>

   <Grid Margin="15">
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="1*"/>
         <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>

      <!-- Left Side - Venue List and Search -->
      <Grid Grid.Column="0" Margin="0,0,10,0">
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

         <!-- Header -->
         <Border Grid.Row="0" 
                 Background="DarkGreen" 
                 CornerRadius="8" 
                 Padding="15" 
                 Margin="0,0,0,15">
            <TextBlock Text="ðŸ¢ Venue Management" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
         </Border>

         <!-- Search Section -->
         <Border Grid.Row="1" 
                 Background="LightGray" 
                 CornerRadius="5" 
                 Padding="10" 
                 Margin="0,0,0,10">
            <StackPanel>
               <TextBlock Text="ðŸ” Search Venues" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"/>
               <StackPanel Orientation="Horizontal">
                  <TextBox Text="{Binding SearchText}" 
                           Watermark="Search by name or address..." 
                           Width="180" 
                           Margin="0,0,5,0"/>
                  <Button Command="{Binding SearchCommand}" 
                          Content="Search" 
                          Padding="8,5"/>
               </StackPanel>
            </StackPanel>
         </Border>

         <!-- Popular Venues -->
         <Border Grid.Row="2" 
                 Background="Gold" 
                 CornerRadius="5" 
                 Padding="10" 
                 Margin="0,0,0,10">
            <StackPanel>
               <TextBlock Text="â­ Popular Venues" 
                          FontWeight="Bold" 
                          FontSize="12" 
                          Margin="0,0,0,8"/>
               <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                  <ItemsControl ItemsSource="{Binding PopularVenues}">
                     <ItemsControl.ItemTemplate>
                        <DataTemplate>
                           <Border Background="White" 
                                   CornerRadius="3" 
                                   Padding="8" 
                                   Margin="0,0,0,3">
                              <Grid>
                                 <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                 </Grid.ColumnDefinitions>
                                 <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="11"/>
                                    <TextBlock Text="{Binding PopularityText}" 
                                               FontSize="9" 
                                               Foreground="Gray"/>
                                 </StackPanel>
                                 <TextBlock Grid.Column="1" 
                                            Text="{Binding AverageScore, StringFormat={}{0:F1}}" 
                                            FontWeight="Bold" 
                                            FontSize="11" 
                                            Foreground="DarkGreen" 
                                            VerticalAlignment="Center"/>
                              </Grid>
                           </Border>
                        </DataTemplate>
                     </ItemsControl.ItemTemplate>
                  </ItemsControl>
               </ScrollViewer>
            </StackPanel>
         </Border>

         <!-- Venue List -->
         <Border Grid.Row="3" 
                 Background="White" 
                 BorderBrush="Gray" 
                 BorderThickness="1" 
                 CornerRadius="5" 
                 Padding="10">
            <StackPanel>
               <TextBlock Text="ðŸ“ All Venues" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10"/>
               <ScrollViewer VerticalScrollBarVisibility="Auto">
                  <ItemsControl ItemsSource="{Binding Venues}">
                     <ItemsControl.ItemTemplate>
                        <DataTemplate>
                           <Button Command="{Binding $parent[UserControl].DataContext.SelectVenueCommand}" 
                                   CommandParameter="{Binding}"
                                   Background="Transparent"
                                   BorderBrush="Transparent"
                                   HorizontalContentAlignment="Stretch"
                                   Padding="0"
                                   Margin="0,0,0,5">
                              <Border Background="AliceBlue" 
                                      CornerRadius="5" 
                                      Padding="10">
                                 <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Address}" 
                                               FontSize="10" 
                                               Foreground="Gray" 
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding PhoneNumber}" 
                                               FontSize="10" 
                                               Foreground="DarkBlue"/>
                                 </StackPanel>
                              </Border>
                           </Button>
                        </DataTemplate>
                     </ItemsControl.ItemTemplate>
                  </ItemsControl>
               </ScrollViewer>
            </StackPanel>
         </Border>

         <!-- Create New Button -->
         <Button Grid.Row="4" 
                 Command="{Binding CreateNewVenueCommand}" 
                 Content="âž• Create New Venue" 
                 Background="Green" 
                 Foreground="White" 
                 Padding="10" 
                 Margin="0,10,0,0" 
                 FontWeight="Bold"/>
      </Grid>

      <!-- Right Side - Venue Details/Form -->
      <Grid Grid.Column="1" Margin="10,0,0,0">
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <!-- Venue Details View -->
         <Border Grid.Row="0" 
                 Background="White" 
                 BorderBrush="DarkGreen" 
                 BorderThickness="2" 
                 CornerRadius="8" 
                 Padding="20"
                 IsVisible="{Binding IsVenueDetailsVisible}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
               <StackPanel>
                  <!-- Venue Header -->
                  <Grid Margin="0,0,0,20">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                     </Grid.ColumnDefinitions>
                     
                     <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding SelectedVenue.Name}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="DarkGreen"/>
                        <TextBlock Text="{Binding VenueStatsText}" 
                                   FontSize="14" 
                                   Foreground="Gray" 
                                   Margin="0,5,0,0"/>
                     </StackPanel>
                     
                     <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Command="{Binding EditVenueCommand}" 
                                Content="âœï¸ Edit" 
                                Background="Orange" 
                                Foreground="White" 
                                Padding="10,5" 
                                Margin="0,0,5,0"/>
                        <Button Command="{Binding DeleteVenueCommand}" 
                                Content="ðŸ—‘ï¸ Delete" 
                                Background="Red" 
                                Foreground="White" 
                                Padding="10,5"/>
                     </StackPanel>
                  </Grid>

                  <!-- Venue Information -->
                  <Border Background="LightBlue" 
                          CornerRadius="5" 
                          Padding="15" 
                          Margin="0,0,0,15">
                     <StackPanel>
                        <TextBlock Text="ðŸ“ Location Information" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,8">
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition Width="*"/>
                           </Grid.ColumnDefinitions>
                           <TextBlock Grid.Column="0" Text="Address:" FontWeight="Bold"/>
                           <TextBlock Grid.Column="1" Text="{Binding SelectedVenue.Address}" TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition Width="*"/>
                           </Grid.ColumnDefinitions>
                           <TextBlock Grid.Column="0" Text="Phone:" FontWeight="Bold"/>
                           <TextBlock Grid.Column="1" Text="{Binding SelectedVenue.PhoneNumber}"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition Width="*"/>
                           </Grid.ColumnDefinitions>
                           <TextBlock Grid.Column="0" Text="Type:" FontWeight="Bold"/>
                           <TextBlock Grid.Column="1" Text="{Binding SelectedVenue.Private}"/>
                        </Grid>
                     </StackPanel>
                  </Border>

                  <!-- Venue Statistics -->
                  <Border Background="LightYellow" 
                          CornerRadius="5" 
                          Padding="15">
                     <StackPanel>
                        <TextBlock Text="ðŸ“Š Venue Statistics" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,10"/>
                        
                        <Grid>
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="1*"/>
                              <ColumnDefinition Width="1*"/>
                              <ColumnDefinition Width="1*"/>
                           </Grid.ColumnDefinitions>
                           
                           <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                              <TextBlock Text="ðŸŽ®" FontSize="20" HorizontalAlignment="Center"/>
                              <TextBlock Text="{Binding SelectedVenueStatistics.TotalGamesPlayed}" 
                                         FontWeight="Bold" 
                                         FontSize="18" 
                                         HorizontalAlignment="Center"/>
                              <TextBlock Text="Games Played" 
                                         FontSize="12" 
                                         HorizontalAlignment="Center"/>
                           </StackPanel>
                           
                           <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                              <TextBlock Text="ðŸ‘¥" FontSize="20" HorizontalAlignment="Center"/>
                              <TextBlock Text="{Binding SelectedVenueStatistics.UniquePlayersCount}" 
                                         FontWeight="Bold" 
                                         FontSize="18" 
                                         HorizontalAlignment="Center"/>
                              <TextBlock Text="Players" 
                                         FontSize="12" 
                                         HorizontalAlignment="Center"/>
                           </StackPanel>
                           
                           <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                              <TextBlock Text="ðŸŽ¯" FontSize="20" HorizontalAlignment="Center"/>
                              <TextBlock Text="{Binding SelectedVenueStatistics.AverageScore, StringFormat={}{0:F1}}" 
                                         FontWeight="Bold" 
                                         FontSize="18" 
                                         HorizontalAlignment="Center"/>
                              <TextBlock Text="Avg Score" 
                                         FontSize="12" 
                                         HorizontalAlignment="Center"/>
                           </StackPanel>
                        </Grid>
                     </StackPanel>
                  </Border>
               </StackPanel>
            </ScrollViewer>
         </Border>

         <!-- Venue Form (Create/Edit) -->
         <Border Grid.Row="0" 
                 Background="White" 
                 BorderBrush="DarkBlue" 
                 BorderThickness="2" 
                 CornerRadius="8" 
                 Padding="20"
                 IsVisible="{Binding IsVenueFormVisible}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
               <StackPanel>
                  <!-- Form Header -->
                  <Grid Margin="0,0,0,20">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                     </Grid.ColumnDefinitions>
                     <TextBlock Grid.Column="0"
                                Text="{Binding VenueFormTitle}" 
                                FontSize="20" 
                                FontWeight="Bold" 
                                Foreground="DarkBlue"/>
                     <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Command="{Binding SaveVenueCommand}" 
                                Content="ðŸ’¾ Save" 
                                Background="Green" 
                                Foreground="White" 
                                Padding="10,5" 
                                Margin="0,0,5,0"/>
                        <Button Command="{Binding CancelEditCommand}" 
                                Content="âŒ Cancel" 
                                Background="Gray" 
                                Foreground="White" 
                                Padding="10,5"/>
                     </StackPanel>
                  </Grid>

                  <!-- Form Fields -->
                  <StackPanel Spacing="15">
                     <!-- Venue Name -->
                     <StackPanel>
                        <TextBlock Text="Venue Name *" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EditingVenue.Name}" 
                                 Watermark="Enter venue name..."/>
                     </StackPanel>

                     <!-- Address -->
                     <StackPanel>
                        <TextBlock Text="Address *" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EditingVenue.Address}" 
                                 Watermark="Enter full address..." 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"/>
                     </StackPanel>

                     <!-- Phone Number -->
                     <StackPanel>
                        <TextBlock Text="Phone Number" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EditingVenue.PhoneNumber}" 
                                 Watermark="Enter phone number..."/>
                     </StackPanel>

                     <!-- Venue Type -->
                     <StackPanel>
                        <TextBlock Text="Venue Type" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                           <RadioButton Content="Public Venue" 
                                        IsChecked="{Binding !EditingVenue.Private}" 
                                        Margin="0,0,20,0"/>
                           <RadioButton Content="Private Venue" 
                                        IsChecked="{Binding EditingVenue.Private}"/>
                        </StackPanel>
                     </StackPanel>

                     <!-- Form Note -->
                     <Border Background="LightGray" 
                             CornerRadius="5" 
                             Padding="10" 
                             Margin="0,10,0,0">
                        <TextBlock Text="* Required fields. All venue information will be used for game tracking and statistics." 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"/>
                     </Border>
                  </StackPanel>
               </StackPanel>
            </ScrollViewer>
         </Border>

         <!-- Empty State -->
         <Border Grid.Row="0" 
                 Background="LightGray" 
                 CornerRadius="8" 
                 Padding="40"
                 IsVisible="{Binding Path=!IsVenueDetailsVisible}">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
               <TextBlock Text="ðŸ¢" FontSize="48" HorizontalAlignment="Center"/>
               <TextBlock Text="Select a venue from the list" 
                          FontSize="16" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0"/>
               <TextBlock Text="or create a new one to get started" 
                          FontSize="14" 
                          Foreground="Gray" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
         </Border>

         <!-- Loading Overlay -->
         <Border Grid.Row="0" 
                 Background="#80000000" 
                 CornerRadius="8" 
                 IsVisible="{Binding IsLoading}">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
               <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
               <TextBlock Text="Loading..." 
                          FontSize="16" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0"/>
            </StackPanel>
         </Border>
      </Grid>
   </Grid>
</UserControl>